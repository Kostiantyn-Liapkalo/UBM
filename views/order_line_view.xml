<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="order_line_view_form" model="ir.ui.view">
        <field name="name">my_product.order.line.form</field>
        <field name="model">my_product.order.line</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="product_id"/>
                        <field name="price"/>
                        <field name="quantity"/>
                        <field name="subtotal"/>
                        <field name="order_id"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="order_line_view_tree" model="ir.ui.view">
        <field name="name">my_product.order.line.tree</field>
        <field name="model">my_product.order.line</field>
        <field name="arch" type="xml">
            <tree>
                <field name="product_id"/>
                <field name="price"/>
                <field name="quantity"/>
                <field name="subtotal"/>
                <field name="order_id"/>
            </tree>
        </field>
    </record>
</odoo>